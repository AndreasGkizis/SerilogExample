{
  "ConnectionStrings": {
    "DockerLocalhostDB": "Server=localhost,1463;Database=SerilogExampleDB;User Id=sa;Password=SuperSecretPassw0rd!;MultipleActiveResultSets=true;TrustServerCertificate=True;",
    "LinuxDockerLocalhostDB": "Server=localhost,1433;Database=SerilogExampleDB;User Id=sa;Password=SecretPa$$w0rd;MultipleActiveResultSets=true;TrustServerCertificate=True;",
    "LinuxDockerLocalhostLoggingDB": "Server=localhost,1433;Database=SerilogExampleDB;User Id=sa;Password=SecretPa$$w0rd;MultipleActiveResultSets=true;TrustServerCertificate=True;",
    "localhost": "Data Source=localhost;Initial Catalog=SerilogExampleDB;Integrated Security=true;MultipleActiveResultSets=true;TrustServerCertificate=True;",
    "localhostLogging": "Data Source=localhost;Initial Catalog=LoggingSerilogExampleDB;Integrated Security=true;MultipleActiveResultSets=true;TrustServerCertificate=True;"
  },
  "AllowedHosts": "*",

  "Serilog": {
    "DatabaseConfig": {
      "ColumnOptions": {
        "addStandardColumns": [ "LogEvent" ],
        "removeStandardColumns": [ "Properties" ],
        "AdditionalColumns ": null,
        "timeStamp": {
          "columnName": "Timestamp",
          "convertToUtc": true
        },
        "additionalColumns": [
          {
            "ColumnName": "Application",
            "DataType": "nvarchar"
         
          },
          {
            "ColumnName": "Environment",
            "DataType": "nvarchar"
          
          }
        ]
      },
      "SinkOptions": {
        "batchPostingLimit": 5,
        "batchPeriod": "00:00:15",
        "eagerlyEmitFirstEvent": true
      },
      "SchemaName": "dbo",
      "TableName": "Logs"
    },
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{SourceContext}]  [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{SourceContext}]   [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{SourceContext}]  [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "path": "../../Logs/log_.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 10240,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Formatter": "Serilog.Formatting.Json.JsonFormatter",
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithExceptionDetails",
      {
        "Name": "WithPropertyEnricher",
        "Args": {
          "propertyKey": "Application",
          "propertyValue": "SerilogExample"
        }
      }
    ]
  }
}
